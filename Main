    ];

    const movieReviews = [
        {
            id: 1,
            title: "The Shawshank Redemption",
            director: "Frank Darabont",
            category: "drama",
            rating: 3,
            review: "A powerful story of hope and redemption. The performances are outstanding and the storytelling is flawless.",
